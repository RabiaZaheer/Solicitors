<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Scripts/owl.carousel/animate.css" rel="stylesheet" />
    <link href="~/asserts/icons.css" rel="stylesheet" />
    <link href="~/Contents/global.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link href="~/Contents/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="~/Contents/themes/base/datepicker.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <link href="~/Scripts/owl.carousel/owl.carousel.css" rel="stylesheet" />
    <link href="~/Scripts/owl.carousel/owl.theme.default.css" rel="stylesheet" />
    <script src="~/Scripts/owl.carousel/owl.carousel.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    <div class="layout-container main row-fluid">
        <div class="header-container row-fluid">
            @Html.Partial("_Header")
        </div>
        <div class="main-menu-bar">
            @Html.Partial("_MainMenu")
        </div>        
        <div class="main-content-container row-fluid">
            <div class="row-fluid">
                <div class="main-content">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="footer row-fluid">
            @Html.Partial("_footer")
        </div>
    </div>
</body>
</html>
